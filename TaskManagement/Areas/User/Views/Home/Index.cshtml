@using TaskManagement.Models
@model IEnumerable<TaskItem>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Assigned To</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Status</td>
                <td>@task.AssignedToUserId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Assign" asp-route-id="@task.Id" class="btn btn-secondary">Assign</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>